#!/bin/bash
#SBATCH -J  GFOLD
#SBATCH -o GFOLD-%j.out
#SBATCH --partition Lewis,hpc5,hpc4
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=1
#SBATCH --mem-per-cpu=10G
#SBATCH --time 1-00:00


mkdir -p SOFTWARE_PATH/test_out/1G5T-A/
cd SOFTWARE_PATH/test_out/1G5T-A/




export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/modeller-9.16/lib/x86_64-intel8/:SOFTWARE_PATH/tools/IMP2.6/lib:SOFTWARE_PATH/tools/boost_1_55_0/lib:$LD_LIBRARY_PATH
PYTHONPATH="SOFTWARE_PATH/tools/IMP2.6/lib:SOFTWARE_PATH/tools/modeller-9.16/lib/x86_64-intel8/python2.5/:SOFTWARE_PATH/tools/modeller-9.16/modlib/:$PYTHONPATH"
export PYTHONPATH



if [[ ! -f "SOFTWARE_PATH/test_out/1G5T-A/1G5T-A/1G5T-A_GFOLD.pdb" ]];then 
	printf "python SOFTWARE_PATH/src/GFOLD.py  --target 1G5T-A  --fasta SOFTWARE_PATH/examples/1G5T-A.fasta --ss SOFTWARE_PATH/examples/1G5T-A.ss  --hbond 1 --restraints SOFTWARE_PATH/examples/1G5T-A.restraints --type CB --distdev 0.1  --epoch 10  --cgstep 100  --dir  SOFTWARE_PATH/test_out/1G5T-A/ --sep 1\n\n"
	python SOFTWARE_PATH/src/GFOLD.py  --target 1G5T-A  --fasta SOFTWARE_PATH/examples/1G5T-A.fasta --ss SOFTWARE_PATH/examples/1G5T-A.ss  --hbond 1 --restraints SOFTWARE_PATH/examples/1G5T-A.restraints --type CB --distdev 0.1  --epoch 10  --cgstep 100  --dir  SOFTWARE_PATH/test_out/1G5T-A/ --sep 1 
fi

printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/1G5T-A.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/1G5T-A/1G5T-A/1G5T-A_GFOLD.pdb" ]];then 
	printf "!!!!! Failed to run GFOLD, check the installation <SOFTWARE_PATH/src/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/1G5T-A/1G5T-A/1G5T-A_GFOLD.pdb\n\n"
fi

printf "Validating the results\n\n";
printf "SOFTWARE_PATH/tools/TMscore  SOFTWARE_PATH/test_out/1G5T-A/1G5T-A/1G5T-A_GFOLD.pdb  SOFTWARE_PATH/installation/benchmark/native_structure/1G5T-A.pdb\n\n"
SOFTWARE_PATH/tools/TMscore  SOFTWARE_PATH/test_out/1G5T-A/1G5T-A/1G5T-A_GFOLD.pdb  SOFTWARE_PATH/installation/benchmark/native_structure/1G5T-A.pdb

